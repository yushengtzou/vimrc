"-----------------
" Function
"-----------------
set nocompatible
set clipboard=unnamed
set noswapfile

set scrolloff=3
set smartcase

"-----------------
" Appearance
"-----------------
"  set number
"  set showcmd
"  set nolist
"  set wrap
"  set linebreak
"  set ruler
"  set showtabline=2
"
"-----------------
" Search
"-----------------
set ignorecase
set incsearch
set hlsearch

"-----------------
" Tab, Space
"-----------------
set softtabstop=4
set shiftwidth=2
set expandtab

"-----------------
" Tab
"-----------------
set splitbelow
set splitright

"-----------------
" Color
"-----------------
syntax on

"-----------------
" Filetype
"-----------------
filetype on
filetype indent on
filetype plugin on

